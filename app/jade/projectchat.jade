div.container.view#view-projectchat
    include ./includes/chatbar.jade

    div.chat
        div.chat__messages
            div.chat__message(v-for="message in messages | orderBy 'createdAt'")
                p.chat__message__user {{ message.user.username }}
                div.chat__message__body
                    div.chat__message__avatar-container
                        img.chat__message__avatar(src="../img/user1.png", alt="")
                    time.chat__message__time {{ message.createdAt | hour }}
                    p.chat__message__text {{ message.text }}
